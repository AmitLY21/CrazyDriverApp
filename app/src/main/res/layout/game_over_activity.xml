<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gameOverGif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/giphy" />
    <LinearLayout
        android:id="@+id/panel_final_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gameOverGif">

        <TextView
            android:id="@+id/panel_LBL_final_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Final Score: "
            android:fontFamily="@font/ferrari"
            android:textColor="@color/white"
            android:textSize="40sp">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameOverGif">

        <Button
            android:id="@+id/panel_BTN_exit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Exit"
            android:fontFamily="@font/ferrari"
            android:textColor="@color/white"
            android:textSize="25sp">

        </Button>

        <Button
            android:id="@+id/panel_BTN_rerun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:backgroundTint="@color/cardview_dark_background"
            android:text="Start Over"
            android:fontFamily="@font/ferrari"
            android:textColor="@color/white"
            android:textSize="25sp">

        </Button>

    </LinearLayout>

</RelativeLayout>